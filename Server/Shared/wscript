def configure(conf):
    conf.sub_config('Drawing/src')
    conf.sub_config('Database/src')
    conf.sub_config('src')

def build(bld):
    bld.add_subdirs('src')
    bld.add_subdirs('Tests')
    bld.add_subdirs('Net/src')
    bld.add_subdirs('Net/Tests')
    bld.add_subdirs('Gfx/src')
    bld.add_subdirs('Gfx/Tests')
    bld.add_subdirs('Drawing/src')
    bld.add_subdirs('Drawing/Tests')
    bld.add_subdirs('Database/src')
    bld.add_subdirs('Items/src')
    bld.add_subdirs('XML/src')
    bld.add_subdirs('XML/Tests')
    bld.add_subdirs('Database/src')
    bld.add_subdirs('Common/src')
    bld.add_subdirs('NGP/src')
    bld.add_subdirs('JSON/src')
    bld.add_subdirs('JSON/Tests')
    bld.add_subdirs('Path/src')
    bld.add_subdirs('Path/Tests')
